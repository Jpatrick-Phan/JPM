{
  "name": "jpm-cli",
  "version": "1.0.3",
  "description": "Jatrick Project Manager (JPM) - Spec-Driven Development CLI for AI Agents",
  "bin": {
    "jpm": "./dist/src/index.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "cli",
    "project-management",
    "ai",
    "gemini",
    "claude",
    "gpt",
    "spec-driven"
  ],
  "author": "Jatrick",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jpatrick-Phan/JPM.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "ignore": "^7.0.5",
    "inquirer": "^8.2.7",
    "ora": "^5.4.1",
    "p-retry": "^4.6.2",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
